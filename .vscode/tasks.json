{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint all",
      "type": "shell",
      "command": "${workspaceRoot}/node_modules/.bin/eslint '{src,test}/**/*'",
      "problemMatcher": ["$eslint-stylish"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "promptOnClose": true
    }
  ]
}
